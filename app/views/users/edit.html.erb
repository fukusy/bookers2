<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h2>User info</h2>
          <%= form_with model:@user, local:true do |f| %>

        <div class="form_group">
          <label for="inputName">Name</label>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", :class => 'form-control name' %>
        </div>


          <% attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>



        <div class="form_group">
          <label for="inputImage">ProfileImage</label>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", :class => "form-control-file user_image" %>
        </div>


        <div class="form_group">
          <label for="inputIntrodaction">Introdaction</label>
          <%= f.text_area :introdaction, autofocus: true, id:"inputIntrodaction", placeholder:"説明", :class => "form-control introduction" %>
        </div>


        <div class="form-group">
          <%= f.submit '変更を保存', class:"btn btn-secondary" %>
        </div>


      <% end %>

    </div>
  </div>
</div>