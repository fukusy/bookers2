<table>
    <thead>
        <tr>
            <th>投稿者名</th>
            <th>タイトル</th>
            <th>本文</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody id="post">
    <% books.each do |book| %>
      <tr>
        <td><%= link_to user_path(book) do %>
        <%= attachment_image_tag book.user, :profile_image, fallback: "no_image.jpg", size: "40x40"  %>
        <%= book.user.name %>
        <% end %>
        </td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "詳細", book_path(book) %></td>
        <% if book.user == current_user %>
          <td><%= link_to "編集", edit_book_path(book) %></td>
          <td><%= link_to "削除", book_path(book), method: :delete, remote: true %></td>
        <% else %>
          <td></td>
          <td></td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
</table>