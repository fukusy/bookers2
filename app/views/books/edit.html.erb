<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h2>Editing Book</h2>
          <%= form_with model:@book, local:true do |f| %>

        <div class="form_group">
          <label for="inputTitle">Title</label>
          <%= f.text_field :title, autofocus: true, id:"inputName", placeholder:"名前", :class => 'form-control name' %>
        </div>

        <div class="form_group">
          <label for="inputOpinion">Opinion</label>
          <%= f.text_area :body, autofocus: true, id:"inputIntrodaction", placeholder:"説明", :class => "form-control introduction" %>
        </div>


        <div class="form-group">
          <%= f.submit 'Update Book', class:"btn btn-success" %>
        </div>
      <% end %>

      <p><%= link_to 'Show', book_path(@book) %></a>
       |
      <%= link_to 'Back', books_path %></p>

    </div>
  </div>
</div>